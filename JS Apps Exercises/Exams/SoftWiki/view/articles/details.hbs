{{>header}}

<!-- Details -->
    <div class="container details">
      <div class="details-content">
        <h2>{{title}}</h2>
        <strong>{{category}}</strong>
        <p>{{content}}</p>
        <div class="buttons">
          {{#if canEdit}}
          <a href="#/articles/close/{{id}}" class="btn delete">Delete</a>
          <a href="#/articles/edit/{{id}}" class="btn edit">Edit</a>
          {{else}}
          <a href="#/articles/dashboard" class="btn edit">Back</a>
          {{/if}}
        </div>
      </div>
    </div>

    {{>footer}}